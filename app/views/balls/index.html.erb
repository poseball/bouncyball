<h1>Listing balls</h1>

<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Altitude</th>
  </tr>

<% for ball in @balls %>
  <tr>
    <td><%=h ball.latitude %></td>
    <td><%=h ball.longitude %></td>
    <td><%=h ball.altitude %></td>
    <td><%= link_to 'Show', ball %></td>
    <td><%= link_to 'Edit', edit_ball_path(ball) %></td>
    <td><%= link_to 'Destroy', ball, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ball', new_ball_path %>
